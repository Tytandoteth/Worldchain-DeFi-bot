{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "nixpacksPlan": {
      "phases": {
        "build": {
          "cmds": ["echo 'Skipping build for simplified deployment'"]
        }
      }
    }
  },
  "deploy": {
    "numReplicas": 1,
    "startCommand": "node start.js",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  }
}
