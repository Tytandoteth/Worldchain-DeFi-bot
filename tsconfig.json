{
  "compilerOptions": {
    "target": "ES2020",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "declaration": true,
    "baseUrl": ".",
    "paths": {
      "@worldchain/core/*": ["packages/core/*"],
      "@worldchain/telegram-bot/*": ["packages/telegram-bot/*"]
    }
  }
}
